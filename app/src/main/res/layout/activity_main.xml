<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Busy Bottles"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/black"
                android:textSize="28sp"/>

<!--                <androidx.appcompat.widget.AppCompatButton-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="match_parent"-->
<!--                    -->
<!--                    android:background="@drawable/cart_action_item"-->
<!--                    />-->

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp">

                    <ImageView
                        android:id="@+id/cart"
                        android:layout_width="75dp"
                        android:layout_height="50dp"
                        android:src="@drawable/shoppingcart" />


                    <TextView
                        android:id="@+id/cart_text"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:text="0"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/badge_shape"
                        android:layout_gravity="top|end"
                        android:textSize="20dp"
                        />


                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="370dp"
                        android:layout_height="200dp"
                        android:src="@drawable/bottle3" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="Cheeki Black Bottle Rs.199"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="50dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buy Now"
                            android:id="@+id/bn1"
                            android:textSize="17sp"
                            android:padding="13dp"
                            />

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cartb1"
                            android:text="Add to Cart"
                            android:textSize="17sp"
                            android:layout_marginLeft="50dp"
                            android:padding="13dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="370dp"
                            android:layout_height="200dp"
                            android:src="@drawable/bottle4" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:text="Cheeki Bottle Rs.199"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="50dp">

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Buy Now"
                                android:id="@+id/bn2"
                                android:textSize="17sp"
                                android:padding="13dp"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/cartb2"
                                android:text="Add to Cart"
                                android:textSize="17sp"
                                android:layout_marginLeft="50dp"
                                android:padding="13dp"/>
                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="370dp"
                            android:layout_height="200dp"
                            android:src="@drawable/bottle5" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:text="Cheeki Black Bottle Rs.199"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="50dp">

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Buy Now"
                                android:id="@+id/bn3"
                                android:textSize="17sp"
                                android:padding="13dp"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/cartb3"
                                android:text="Add to Cart"
                                android:textSize="17sp"
                                android:layout_marginLeft="50dp"
                                android:padding="13dp"/>
                        </LinearLayout>



                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>

        </LinearLayout>



    </ScrollView>

</LinearLayout>